            }
        });
        document.getElementById("decKnowledge").addEventListener("click", () => {
            if (count > 0 && count < max && parseInt($("#Knowledge").val(), 10) != 0) {
                $("#Knowledge").val(parseInt($("#Knowledge").val(), 10) - 1);
                count = count + 1;
                $("#TotalPoints").val(count);
                $("#totalspan").text(count);
            }
        });
        document.getElementById("decDestruction").addEventListener("click", () => {
            if (count > 0 && count < max && parseInt($("#Destruction").val(), 10) != 0) {
                $("#Destruction").val(parseInt($("#Destruction").val(), 10) - 1);
                count = count + 1;
                $("#TotalPoints").val(count);
                $("#totalspan").text(count);
            }
        });
        document.getElementById("decHumanism").addEventListener("click", () => {
            if (count > 0 && count < max && parseInt($("#Humanism").val(), 10) != 0) {
                $("#Humanism").val(parseInt($("#Humanism").val(), 10) - 1);
                count = count + 1;
                $("#TotalPoints").val(count);
                $("#totalspan").text(count);
            }
        });
        document.getElementById("decAuthority").addEventListener("click", () => {
            if (count > 0 && count < max && parseInt($("#Authority").val(), 10) != 0) {
                $("#Authority").val(parseInt($("#Authority").val(), 10) - 1);
                count = count + 1;
                $("#TotalPoints").val(count);
                $("#totalspan").text(count);
            }
        });
        document.getElementById("decRich").addEventListener("click", () => {
            if (count > 0 && count < max && parseInt($("#Rich").val(), 10) != 0) {
                $("#Rich").val(parseInt($("#Rich").val(), 10) - 1);
                count = count + 1;
                $("#TotalPoints").val(count);
                $("#totalspan").text(count);
            }
        });
        document.getElementById("decCraft").addEventListener("click", () => {
            if (count > 0 && count < max && parseInt($("#Craft").val(), 10) != 0) {
                $("#Craft").val(parseInt($("#Craft").val(), 10) - 1);
                count = count + 1;
                $("#TotalPoints").val(count);
                $("#totalspan").text(count);
            }
        });
        document.getElementById("decChildOfNature").addEventListener("click", () => {
            if (count > 0 && count < max && parseInt($("#ChildOfNature").val(), 10) != 0) {
                $("#ChildOfNature").val(parseInt($("#ChildOfNature").val(), 10) - 1);
                count = count + 1;
                $("#TotalPoints").val(count);
                $("#totalspan").text(count);
            }
        });
    });
</script>