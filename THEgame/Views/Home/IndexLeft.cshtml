@model IndexModel
@{
    @*<div class="border-top">Уровень сложности:</div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Хардкор</label>
        </div>*@
}
@Html.HiddenFor(m => m.Sex)
@Html.HiddenFor(m => m.Race)
@Html.HiddenFor(m => m.RaceDis)
<form asp-action="Index" asp-controller="Home" asp-anti-forgery="true" class="codetext">
    <img src="~/5890d8e9b2cb5b18709ca623.png" class="linkimg" />
    <div>
        <h4 class="display-4">Основные параметры</h4>
        <div class="border-top gender">
            Пол персонажа:
            <div class="form-check">
                <input class="form-check-input" type="radio" id="flexRadioDefault1" asp-for="Sex" value="Мужской">
                <label class="form-check-label" for="flexRadioDefault1">
                    Мужской
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" id="flexRadioDefault2" asp-for="Sex" value="Женский">
                <label class="form-check-label" for="flexRadioDefault2">
                    Женский
                </label>
            </div>
            <div class="form-check border-bottom">
                <input class="form-check-input" type="radio" id="flexRadioDefault3" asp-for="Sex" value="Другой">
                <label class="form-check-label" for="flexRadioDefault3">
                    Другой
                </label>
            </div>
        </div>
        <div class="gender">
            Речь персонажа:
            <div class="form-check">                
                <input class="form-check-input" type="radio" id="flexRadioDefault4" asp-for="Speach" value="Немой">
                <label class="form-check-label" for="flexRadioDefault4">
                    Немой
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" id="flexRadioDefault5" asp-for="Speach" value="Непонятные звуки">
                <label class="form-check-label" for="flexRadioDefault5">
                    Непонятные звуки
                </label>
            </div>
            <div class="form-check border-bottom">
                <input class="form-check-input" type="radio" id="flexRadioDefault6" asp-for="Speach" value="Общепринятая речь">
                <label class="form-check-label" for="flexRadioDefault6">
                    Общепринятая речь
                </label>
            </div>
        </div>
        <div class="form-check">
            <label class="form-check-label" for="flex1">
                Раса
            </label>
            <input class="form-control" type="text" id="flex1" asp-for="Race" style="width: 30%">

        </div>
        <div class="form-check">
            <label class="form-check-label" for="flex2">
                Описание расы
            </label>
            <textarea class="form-control" id="flex2" rows="3" asp-for="RaceDis"></textarea>
        </div>
        <button type="submit" class="btn btn-info">Сохранить</button>
    </div>    
</form>